# ~/.bash_aliases

# to make aliases work with sudo (note the trailing space)
alias sudo='sudo '

# some more ls aliases
alias ll='ls -alhF'
alias la='ls -A'
alias l='ls -CF'
alias ld='ls -d */'

alias grep='grep --color'
alias less='less -R'
alias cls='clear'
alias ..='cd ..'
alias odilia='feh -ZsdSname --hide-pointer -g 1024x584 -B black'
alias dh='df -ht ext4'
alias chmox='chmod +x'
alias vim='vim -p'
alias pacman='pacman-color'

